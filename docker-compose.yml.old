version: "3"

volumes:
  db-data:
    external: false

services:
  db:
    image: postgres:10
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=postgres
    volumes:
      - db-data:/var/lib/postgrresql/db-data
    ports:
      - "5432:5432"


  app:
    build:
      context: .
      dockerfile: Dockerfile
    hostname: plumbing
    command: ./Scripts/run_django.sh
    volumes:
      - .:/usr/src/app
    ports:
      - "8000:8000"
    depends_on:
      - db

  rabbit:
    hostname: rabbit
    image: rabbitmq:3-management
    environment:
      - RABBITMQ_DEFAULT_USER=admin
      - RABBITMQ_DEFAULT_PASS=mypass
    ports:
      - "5672:5672"
      - "15672:15672"

  celeryworker:
    build:
      context: .
      dockerfile: Dockerfile
    command: ./Scripts/run_celery.sh
    volumes: 
      - .:/usr/src/app
    links:
      - db
      - rabbit
    depends_on:
      - rabbit
      - app

  celerybeat:
    build:
      context: .
      dockerfile: Dockerfile
    command: ./Scripts/run_celerybeat.sh
    volumes:
      - .:/usr/src/app
    links:
      - rabbit
      - celeryworker
    depends_on:
      - rabbit
      - app


